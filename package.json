{
  "name": "@lev/core",
  "version": "1.0.0",
  "description": "Leviathan core monorepo with LLM-first plugin architecture (sponsored by Kingly Agency)",
  "type": "module",
  "private": true,
  "workspaces": [
    "packages/*",
    "plugins/@lev-os/*",
    "tooling/*",
    "agent"
  ],
  "scripts": {
    "build": "pnpm -r build",
    "test": "npm run test:all",
    "test:all": "npm run test:agent && npm run test:plugins && npm run test:e2e",
    "test:agent": "cd agent && npm test",
    "test:plugins": "node packages/testing/src/test-runner.js plugins",
    "test:plugins:parallel": "npm run test:plugins",
    "test:e2e": "cd agent && npm run test:e2e",
    "test:discover": "node packages/testing/src/test-runner.js discover",
    "dev": "pnpm -r dev",
    "lint": "pnpm -r lint",
    "clean": "pnpm -r clean"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "keywords": ["leviathan", "llm-first", "plugin", "architecture"],
  "author": "Leviathan Team (sponsored by Kingly Agency)",
  "license": "MIT"
}