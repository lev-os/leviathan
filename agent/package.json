{
  "name": "@kingly/core-agent",
  "version": "1.0.0",
  "description": "Unified Kingly OS Core Agent - FlowMind Constitutional Framework with EEPS Personality System",
  "type": "module",
  "main": "src/index.js",
  "exports": {
    ".": "./src/index.js",
    "./mcp": "./src/mcp-server.js",
    "./flowmind": "./src/flowmind/index.js"
  },
  "bin": {
    "kingly-agent": "./src/index.js",
    "kingly-mcp": "./src/mcp-server.js"
  },
  "scripts": {
    "start": "node src/index.js",
    "mcp": "node src/mcp-server.js",
    "dev": "node --watch src/mcp-server.js",
    "build:embeddings": "node src/build-embeddings.js",
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest",
    "test:bdd": "NODE_OPTIONS='--experimental-vm-modules' jest tests/bdd",
    "test:unit": "NODE_OPTIONS='--experimental-vm-modules' jest tests/unit",
    "test:integration": "NODE_OPTIONS='--experimental-vm-modules' jest tests/integration",
    "test:e2e": "NODE_OPTIONS='--experimental-vm-modules' jest tests/e2e",
    "test:watch": "NODE_OPTIONS='--experimental-vm-modules' jest --watch",
    "test:constitutional": "node tests/constitutional-framework.test.js",
    "test:flowmind": "node tests/flowmind-integration.test.js"
  },
  "keywords": [
    "ai",
    "agent",
    "mcp",
    "llm-first",
    "flowmind",
    "constitutional-framework",
    "eeps",
    "personality-system",
    "semantic-search",
    "context-switching",
    "kingly-os"
  ],
  "author": "Kingly OS Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "@xenova/transformers": "^2.17.2",
    "dotenv": "^16.5.0",
    "fs-extra": "^11.2.0",
    "glob": "^11.0.0",
    "js-yaml": "^4.1.0",
    "openai": "^4.73.1",
    "yaml": "^2.3.4",
    "zod": "^3.25.62"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "jest": "^29.7.0",
    "nodemon": "^3.0.0",
    "vitest": "^3.2.1"
  },
  "files": [
    "src/",
    "contexts/",
    "docs/",
    "README.md"
  ]
}